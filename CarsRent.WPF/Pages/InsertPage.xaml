<Page x:Class="CarsRent.WPF.Pages.InsertPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarsRent.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InsertPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnBack" Content="Назад" Grid.Column="2" Grid.Row="1" Click="btnBack_Click"/>
        <Button x:Name="btnSave" Content="Сохранить" Grid.Column="1" Grid.Row="1" Click="btnSave_Click"/>

        <StackPanel x:Name="spLabels" Grid.Row="0" Grid.Column="0"/>
        <StackPanel x:Name="spInputs" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
