<Page x:Class="CarsRent.WPF.Pages.SettingsCategory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarsRent.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsCategory">

    <Grid x:Name="gridInputs">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="spLabels" Grid.Column="0" Grid.Row="0"/>
        <StackPanel x:Name="spInputs" Grid.Column="1" Grid.Row="0"/>
        <Button x:Name="btnSaveChanges" Content="Сохранить" Grid.Column="1" Grid.Row="1" Click="btnSaveChanges_Click"/>
    </Grid>
</Page>